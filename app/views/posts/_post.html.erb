<div class="blue-container">
  <div id="<%= dom_id post %>">

    <div class="author">
      <p>
        <strong>Author:</strong>
        <%= post.author %>
      </p>
    </div>

    <div class="post-date">
      <p>
        <strong>Post date:</strong>
        <%= post.post_date %>
      </p>
    </div>

    <div class="comment">
      <p>
        <strong>Post:</strong>
        <%= post.comment %>
      </p>
    </div>
  </div>
</div>

