<div class="log-in-sign-up-screen">
  <h2>Enter your user details</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    <div class="field">
      <%= f.label :email, style:"display: none;" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"fields", placeholder:"Email" %>
    </div>

    <div class="field">
      <%= f.label :password, style:"display: none;"%><br />
      <%= f.password_field :password, autocomplete: "current-password", class:"fields", placeholder:"Password" %>
    </div>

    <div class="actions">
      <%= f.submit "Log In", class:"black-button login-signup" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
